#!/bin/bash
set -e

# üîí Ensure script is run as root
if [ "$EUID" -ne 0 ]; then
  echo "‚ùå Please run as root"
  exit 1
fi

# üîÑ Step 1: Update package list
echo "üì¶ Updating system..."
dnf update -y

# üß∞ Step 2: Install Python and pip
echo "üêç Installing Python and dependencies..."
dnf install -y python3 python3-pip python3-devel

# üì• Step 3: Install 'thefuck'
echo "üöÄ Installing 'thefuck'..."
pip3 install thefuck

# üß† Step 4: Add alias and eval to user's bashrc
echo "üîß Configuring aliases..."

BASHRC="/home/${SUDO_USER:-$USER}/.bashrc"

echo 'eval "$(thefuck --alias)"' >> "$BASHRC"
echo 'alias fk=thefuck' >> "$BASHRC"

# ‚ôªÔ∏è Step 5: Reload shell config
echo "‚úÖ Done. Run 'source ~/.bashrc' or open a new terminal."

