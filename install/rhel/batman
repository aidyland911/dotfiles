#!/bin/bash

# ðŸš€ Step 1: Download bat RPM package
echo "ðŸ“¥ Downloading bat RPM..."
curl -fLo bat.rpm https://rpmfind.net/linux/epel/10.0/Everything/x86_64/Packages/b/bat-0.24.0-11.el10_0.x86_64.rpm
if [[ $? -ne 0 ]]; then
    echo "âŒ Failed to download bat.rpm. Please check your internet connection or the URL."
    exit 1
fi

# ðŸ“¦ Step 2: Install bat using dnf
echo "ðŸ“¦ Installing bat..."
sudo dnf install -y bat.rpm
if [[ $? -ne 0 ]]; then
    echo "âŒ Installation failed. You may need root privileges or compatible dependencies."
    exit 1
fi

# ðŸ› ï¸ Step 3: Add MANPAGER to .bashrc
echo "ðŸ› ï¸ Updating ~/.bashrc with MANPAGER for pretty man pages..."
echo 'export MANPAGER="sh -c '\''sed -u -e \"s/\\x1B\[[0-9;]*m//g; s/.\x08//g\" | bat -p -lman'\''"' >> ~/.bashrc

# âœ… Step 4: Done
echo "âœ… Setup complete! Run 'source ~/.bashrc' or restart your terminal to activate changes."

